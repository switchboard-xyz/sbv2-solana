{
  "include": ["./src/**/*", "./src/idl/mainnet.json", "./src/idl/devnet.json"],
  "exclude": ["tests/**/*", "lib", "node_modules"],
  "files": ["src/index.ts"],
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": false,
    "rootDir": "./src"
  }
}
